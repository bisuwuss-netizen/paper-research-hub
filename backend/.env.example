# Optional LLM enrichment
# LLM_PROVIDER=deepseek
# LLM_API_KEY=your_api_key
# LLM_ENDPOINT=https://api.deepseek.com/chat/completions
# LLM_MODEL=deepseek-chat
# LLM_RESPONSE_JSON=true
# LLM_MAX_RETRIES=2

# Optional Semantic Scholar
# S2_API_KEY=your_s2_api_key
# S2_EDGE_LIMIT=100

# Optional Crossref (for DOI lookup)
# CROSSREF_MAILTO=you@example.com

# Optional Zotero Web API (for title match)
# ZOTERO_API_KEY=your_zotero_api_key
# ZOTERO_USER_ID=your_user_id
# ZOTERO_GROUP_ID=your_group_id
# ZOTERO_LIBRARY_TYPE=user

# Optional sync worker
# SYNC_ENABLED=false
# SYNC_POLL_INTERVAL=60
# SYNC_BATCH_SIZE=5
# SYNC_RESYNC_INTERVAL=86400
# SYNC_RETRY_BASE=600
# SYNC_EXPAND=true
# SYNC_AUTO_ENQUEUE=false
